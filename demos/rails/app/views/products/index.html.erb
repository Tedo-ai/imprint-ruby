<div class="products-page">
  <header class="page-header">
    <h1>Product Catalog</h1>
    <p class="stats">
      <%= @total_count %> products | <%= @in_stock_count %> in stock
    </p>
  </header>

  <% if @categories.any? %>
    <nav class="categories">
      <strong>Categories:</strong>
      <% @categories.each do |category| %>
        <span class="category-tag"><%= category %></span>
      <% end %>
    </nav>
  <% end %>

  <div class="products-grid">
    <%= render partial: "product", collection: @products %>
  </div>
</div>

<style>
  .products-page { max-width: 1200px; margin: 0 auto; padding: 20px; }
  .page-header { margin-bottom: 30px; border-bottom: 2px solid #000; padding-bottom: 20px; }
  .page-header h1 { margin: 0 0 10px 0; font-family: monospace; }
  .stats { color: #666; font-family: monospace; }
  .categories { margin-bottom: 20px; font-family: monospace; }
  .category-tag { background: #f0f0f0; padding: 4px 8px; margin: 0 4px; }
  .products-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 20px; }
</style>
