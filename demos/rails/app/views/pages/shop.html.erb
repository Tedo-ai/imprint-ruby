<div class="shop-page">
  <header class="hero">
    <h1>Welcome to the Demo Store</h1>
    <p>This page demonstrates Imprint's browser-to-backend trace linking.</p>
  </header>

  <section class="actions">
    <h2>Test Scenarios</h2>

    <div class="action-cards">
      <!-- Scenario A: Storefront -->
      <div class="action-card">
        <h3>A. Product Listing</h3>
        <p>Tests SQL tracing (SELECT) and view rendering (partials).</p>
        <button class="btn btn-secondary" onclick="refreshProducts()">
          Refresh Stock
        </button>
        <a href="/products" class="btn btn-secondary">View All Products</a>
      </div>

      <!-- Scenario B: Checkout -->
      <div class="action-card">
        <h3>B. Checkout Flow</h3>
        <p>Tests trace propagation from web request to background job.</p>
        <%= form_with url: "/checkout", method: :post, local: true do |f| %>
          <input type="hidden" name="email" value="demo@example.com">
          <input type="hidden" name="total" value="<%= rand(100..500) %>">
          <button type="submit" class="btn btn-primary">
            Place Order ($<%= rand(100..500) %>)
          </button>
        <% end %>
      </div>

      <!-- Scenario C: Error -->
      <div class="action-card">
        <h3>C. Error Recording</h3>
        <p>Tests 500 error capture with stack traces.</p>
        <a href="/crash" class="btn btn-danger">Trigger Payment Error</a>
      </div>
    </div>
  </section>

  <section class="products-preview">
    <h2>Featured Products</h2>
    <div class="products-grid" id="products-container">
      <% @products.each do |product| %>
        <div class="product-mini">
          <span class="name"><%= product.name %></span>
          <span class="price"><%= product.formatted_price %></span>
        </div>
      <% end %>
    </div>
  </section>

  <% if @recent_orders.any? %>
    <section class="recent-orders">
      <h2>Recent Orders</h2>
      <table>
        <thead>
          <tr>
            <th>Order #</th>
            <th>Email</th>
            <th>Total</th>
            <th>Status</th>
            <th>Created</th>
          </tr>
        </thead>
        <tbody>
          <% @recent_orders.each do |order| %>
            <tr>
              <td>#<%= order.id %></td>
              <td><%= order.email %></td>
              <td>$<%= order.total %></td>
              <td class="status-<%= order.status %>"><%= order.status %></td>
              <td><%= time_ago_in_words(order.created_at) %> ago</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </section>
  <% end %>
</div>

<script>
  async function refreshProducts() {
    console.log('[Demo] Fetching products with trace context...');
    try {
      const response = await fetch('/products.json');
      const products = await response.json();
      console.log('[Demo] Loaded', products.length, 'products');

      // Update the product list
      const container = document.getElementById('products-container');
      container.innerHTML = products.slice(0, 12).map(p => `
        <div class="product-mini">
          <span class="name">${p.name}</span>
          <span class="price">$${parseFloat(p.price).toFixed(2)}</span>
        </div>
      `).join('');
    } catch (e) {
      console.error('[Demo] Failed to fetch products:', e);
    }
  }
</script>

